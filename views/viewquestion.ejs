<%- include('./common/head2.ejs') %> <%- include('./common/nav.ejs') %> <%- include('./common/push-down.ejs') %>
<h1 style="text-align: center;"><%= question.branch %>/<%= question.material %>/<%= question.lesson %></h1>
<h2 style="text-align: center;">Asked By: <a href="/users/<%= question.username %>">  
    <%= question.username %>
</a>
</h2> 
<h1 style="text-align: center;">
    <%= question.question %>
</h1>
<img class="questionimage" src="/questions/<%= question.image %>" alt="">
<div style="margin-bottom: 10vh;"></div>
<% for(var i=0; i < question.answers.length  ; i++) {%>
    <div style="text-align: center; font-size: 25px;">
    <%= question.answers[i].answer %> - By: <a href="/users/<%= question.answers[i].username %>"><%= question.answers[i].username %> </a>
    <br>

    <img class="answerimage" src="/questions/<%= question.answers[i].image %>" alt="">
  </div>
    <% } %>
<form id="<%= question.id %>form" action="/<%= question.branch %>/<%= question.material %>/<%= question.lesson %>/<%= question.id %>/answer/post"" method="post">
    <textarea style="width: 100%;" placeholder="أجب على السّؤال" type="text" name="answer" ></textarea>
    <button type="submit" class="btn" style="margin: 5px; color: #05cb87; background-color: none; border:2px solid #05cb87; outline: none;">أجب على السّؤال</button>
  </form>
<style>
    form {
        margin-top: 5vh;
        width: 90%;
        margin-left: 5%;
    }
    .questionimage {
        width: 90%;
        margin-left: 5%;
        border-radius: 20px;
        box-shadow: 0px 30px 80px black;
    }
    .answerimage {
        width: 90%;
    }
</style>
<%- include('./common/head2'); -%> <%- include('./common/nav'); -%> <%-
include('./common/push-down'); -%>

<main class="container">
  <section class="title" style="border-radius: 12px">افضل المستخدمين</section>
  <section class="users">
    <% topusers.forEach(function(user) { %>
    <div class="single-user">
      <div class="profile">
        <% if( user.image != 'no image added') { %>
        <img src="/profiles/<%= user.image %>" alt="profile" />
        <% } else { %>
        <img
          src="https://i.pinimg.com/564x/93/9c/3c/939c3cd8e8e666319ead92fa5d00b393.jpg"
          alt="profile"
        />

        <% } %>
      </div>
      <a href="/users/<%= user.username %>" class="name" target="blank"
        ><%= user.name %></a
      >
      <div class="points"><%= user.points %> ponts</div>
    </div>
    <% }) %>
  </section>
</main>

<style>
  .container {
    display: grid;
    justify-content: center;
    align-items: center;
  }
  .users {
    display: grid;
  }
  .profile {
    width: 70px;
    height: 70px;
    margin: 10px;
    border-radius: 50%;
    overflow: hidden;
  }
  img {
    width: 70px;
  }
  .title {
    display: flex;
    justify-content: center;
    margin: 10px 0;
    font-size: 2.5em;
    box-shadow: -1px 10px 30px 0px rgba(0, 0, 0, 0.75);
  }
  .single-user {
    display: flex;
    justify-content: space-evenly;
    background-color: var(--secondary);
    margin: 0 0 20px 0;
    border-radius: 8px;
    transition: all 0.5s ease;
    box-shadow: 0 0 20px rgba(24, 24, 24, 0.734);
  }
  .single-user:hover {
    transform: scale(1.2, 1.2);
  }
  .name {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 60%;
    font-size: 2em;
    color: black;
    text-decoration: none;
  }
  .name:hover {
    cursor: pointer;
    text-decoration: underline;
  }
  .points {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    text-align: center;
    padding: 0 5px 10px 0;
    color: #eee;
  }
  @media screen and (max-width: 600px) {
    .name {
      font-size: 25px;
      margin: 10px;
    }
    .title {
      font-size: 30px;
      margin: 30px;
    }
    .container {
      width: 100vw;
      align-items: center;
    }
  }
  :root {
    --primary: #038a5b;
    --secondary: #05cb87;
    --dark: #292929;
  }
</style>

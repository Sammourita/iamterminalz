<%- include('./common/head2.ejs') %>

  <body>
    <div style="margin-top: 20vh">
      <h1
        style="text-align: center; color: #141a25; text-shadow: 1px 2px white"
      >
        إنشاء حساب أستاذ
      </h1>
      <div class="signup-container">
        <div class="signup-box">
          <form action="/signup-teacher" method="POST" name="form">
            <div class="mycarousel">
              <div
                class="input-container username row my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="username" class="form-label">username</label>
                </div>

                <div class="col col-sm-6" style="width: 100%">
                  <input
                    id="input1"
                    type="text"
                    name="username"
                    placeholder="username"
                    class="form-control"
                    style="width: 100%"
                  />
                </div>
              </div>
              <div
                class="input-container name row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="name" class="form-label">اسمك الكامل</label>
                </div>
                <div class="col col-sm-6" style="width: 100%">
                  <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="الإسم الكامل"
                  />
                </div>
              </div>
              <div
                class="input-container name row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="name" class="form-label">مادّة التّدريس</label>
                </div>
                <select name="materials" id="cars" class="form-control">
                  <option value="math">math</option>
                  <option value="physics">physics</option>
                  <option value="chemistry">chemistry</option>
                  <option value="arabic">اللغة العربيّة</option>
                  <option value="english">اللغة الأجنبيّة</option>
                  <option value="economics">إقتصاد</option>
                  <option value="philosophy">فلسفة</option>
                  <option value="sociology">إجتماع و إقتصاد</option>
                </select>
              </div>

              <div
                class="input-container email row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="email" class="form-label">عدد سنوات الخبرة</label>
                </div>
                <div class="col col-sm-6" style="width: 100%">
                  <input
                    type="number"
                    name="experience"
                    placeholder="سنوات"
                    required=""
                    class="form-control"
                  />
                </div>
              </div>
              <div
                class="input-container password row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="password" class="form-label">الشّهادات</label>
                </div>
                <div class="col col-sm-6" style="width: 100%">
                  <input
                    type="text"
                    name="certificate"
                    placeholder="bachelors..."
                    class="form-control"
                  />
                </div>
              </div>
              <div
                class="input-container password row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="password" class="form-label">السّعر</label>
                </div>
                <div class="col col-sm-6" style="width: 100%">
                  <input
                    type="number"
                    name="price"
                    placeholder="السّعر على السّاعة/$"
                    class="form-control"
                  />
                </div>
              </div>
              <div
                class="input-container password row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="password" class="form-label">المنطقة</label>
                </div>
                <div class="col col-sm-6" style="width: 100%">
                  <select
                    name="mainlocation"
                    id="cars"
                    style="
                      width: 100%;
                      text-align: center;
                      background-color: #141a25;
                      color: white;
                    "
                  >
                    <option value="بيروت">بيروت</option>
                    <option value="صيدا">صيدا</option>
                    <option value="صور">صور</option>
                    <option value="بعلبك">بعلبك</option>
                    <option value="البقاع">البقاع</option>
                    <option value="النبطية">النبطية</option>
                    <option value="طرابلس">طرابلس</option>
                    <option value="عكّار">عكّار</option>
                  </select>
                </div>
              </div>
              <div
                class="input-container password row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="password" class="form-label"
                    >المنطقة بالتّفصيل</label
                  >
                </div>
                <div class="col col-sm-6" style="width: 100%">
                  <input
                    type="text"
                    name="location"
                    placeholder="ألمنطقة أكثر تفصيلا    "
                    class="form-control"
                  />
                </div>
              </div>
              <div
                class="input-container password row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="password" class="form-label">email</label>
                </div>
                <div class="col col-sm-6" style="width: 100%">
                  <input
                    type="text"
                    name="email"
                    placeholder="email"
                    class="form-control"
                  />
                </div>
              </div>
              <div
                class="input-container password row justify-content-center my-carousel-item my-fade"
              >
                <div class="col-auto">
                  <label for="password" class="form-label">password</label>
                </div>
                <div class="col col-sm-6" style="width: 100%">
                  <input
                    type="password"
                    name="password"
                    placeholder="password"
                    class="form-control"
                  />
                </div>
              </div>
            </div>
            <div class="buttons row">
              <div id="previous" class="col-6 ms-0" style="margin: auto">
                <button
                  type="button"
                  class="btn btn-primary btn-lg my-fade"
                  onclick="plusSlides(-1)"
                >
                  Previous
                </button>
              </div>

              <div id="next" class="col-12 me-0" style="margin: auto">
                <button
                  type="submit"
                  class="btn btn-primary btn-lg my-fade"
                  onclick="plusSlides(1)"
                >
                  Next
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="/js/signupteacher.js"></script>
    <script>
      document.getElementById('input1').onfocusout = function() {
      	let username = document.getElementById('input1');
      	if(username.value.includes(' ')) {
      		alert('please remove the space from your username "    ')
      		username.value = '';
      		document.forms["/signup-student"].submit() = false;

      	}
      	else {
      	}
      }
    </script>
  </body>
</html>

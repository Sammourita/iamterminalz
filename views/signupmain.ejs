    <body>
        <header>
            <nav>

            </nav>
        </header>
        <main>
            <section class="section">
                <div class="card" id="student">
                   <div class="image">
                        <img id="studentimage" class="imgz" src="https://cdn.discordapp.com/attachments/950771359930278001/950771486174617610/Untitled_design_20.png" alt="image">
                   </div>
                   <button type="button" class="btnz">
                        <span class="font">حساب تلميذ</span>
                   </button>
                </div>
                <div class="card" id="teacher">
                    <div class="image">
                        <img class="imgz" src="https://cdn.discordapp.com/attachments/950771359930278001/950771465417019422/Untitled_design_19.png" alt="image">

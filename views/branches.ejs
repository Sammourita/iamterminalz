  <div
    style="
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
    "
    class="mainz"
  >
    <div class="canvas">
      <div
        id="one"
        class="one first"
        style="
          background-image: url('https://media.istockphoto.com/videos/abstract-background-with-hexagons-structure-molecule-3d-rendering-video-id1144076969?s=640x640');
        "
      >
        علوم حياة
      </div>
    </div>
    <div class="canvas">
      <div
        id="two"
        class="one second"
        style="
          background-image: url('https://i.pinimg.com/originals/4f/15/20/4f1520d4c04ddc4632821ba6621c806e.jpg');
        "
      >
        علوم عامّة
      </div>
    </div>
    <div class="canvas">
      <div
        id="three"
        class="one third"
        style="
          background-image: url('https://i.pinimg.com/564x/b1/4b/80/b14b808a1ebcb3abada62cb65c312292.jpg');
        "
      >
        إجتماع و إقتصاد
      </div>
    </div>
  </div>
  <style>
    .canvas {
      width: 30%;
      margin-left: 5px;
      height: 40vh;
      overflow: hidden;
      border-radius: 10px;
      border: 2px solid #141a25;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    body {
      background-color: #141a25;
    }
    .mainz {
      height: 60vh;
    }
    .one {
      width: 100%;
      height: 40vh;
      border-radius: 10px;
      background-color: transparent;
      box-shadow: -1px -17px 210px -117px #333333 inset;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      display: flex;
      justify-content: center;
      align-items: center;
      color: white;
      text-shadow: 1px 2px #141a25;
      font-size: 5vh;
      transition: all 0.5s ease;
    }
    .first:hover {
      transform: scale(1.35) skewY(-10deg);
    }
    .second:hover {
      transform: scale(1.35) skewY(2deg);
    }
    .third:hover {
      transform: scale(1.35) skewY(10deg);
    }
    .one:hover {
      box-shadow: inset 0px -200px 200px #333333;
    }
    @media only screen and (max-width: 700px) {
      .one {
        height: 25vh;
      }
      .canvas {
        height: 25vh;
        width: 90%;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .mainz {
        height: 100vh;
      }
    }
  </style>
  <script>
    document.getElementById("one").onclick = function () {
      window.location.href = "/ls";
    };
    document.getElementById("two").onclick = function () {
      window.location.href = "/gs";
    };
    document.getElementById("three").onclick = function () {
      window.location.href = "/es";
    };
  </script>
</div>

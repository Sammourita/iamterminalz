<%- include('./common/head2'); -%>
<%- include('./common/nav'); -%>
<%- include('./common/push-down'); -%>
<body>
    <div class="container" style="display: flex; justify-content: center; flex-wrap: wrap;">
        <% images.forEach(function(image) { %>
            <% if(image.imageNames.length > 0) { %>
                
            <div class="card mb-3">
                
                <div class="card-img-top" alt="Card image cap" loading="lazy"  style="background:   url('/summaries/<%= image.imageNames[0].imageName %>'); background-size: cover;">
                    
                </div>

                <div class="card-body">
                  <h5 class="card-title"><%= image.title %></h5>
                  <p class="card-text"> By <%= image.createdBy %></p>
             
                  <a href="/summary/<%= image.id %>" class="btn btnz btn-outline-dark">دخول</a>
                  <div style="display:flex; justify-content: center; align-items: center;">
                  <p class="card-text" style="color: yellow;"> 
                    <% for(var i=0; i < image.rate  ; i++) {%>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                  </svg>
                  <% } %></small></p></div>
                </div>
              </div>
              <% } %>


        <% }) %> 
    </div>
    <br>
    <br>
    <form id="form" action="/<%= branch %>/<%= material %>/<%= lesson %>/description/post" method="POST" style="display: ;">
        <input type="text" placeholder="العنوان" name="title">
        <input type="text" placeholder="الديسكريبشن" name="description">
        <button type="submit" class="btn btn-outline-light" style="margin-top: -5px;">أكمل النّشر</button>
        
    </form>
</body>
<style>
    .card-img-top {
        box-shadow: inset 0 0 0 1000px rgba(8, 149, 102, 0.386);

        border-radius: 20px 20px 0px 0px;
    height: 30vh;
    display: flex;
    background-position: bottom;
    justify-content: center;
    align-items: center;
    font-size: 30px;
    text-shadow: 1px 2px black;
    text-align: center;
    }
    svg {
        margin-top: 15px;
        color: #06a96d;
    }
    .card {
        width: 32%;
        margin: 5px;
        box-shadow: 9px 50px 54px -13px rgba(0, 0, 0, 0.537);
        border-radius: 20px;
    }
    .btnz {
        width: 100%;
        border-radius: 20px;
        color: #06a96d;
        border: 2px solid #06a96d;
        transition: .5s all ease;
    }
    .btnz:hover {
        background-color: #06a96d;
        font-size: 25px;
        border: 2px solid #06a96d;
        color: white;
    }
    @media only screen and (max-width: 992px) {
       .card {
           width: 80%;
       } 
    }
</style>
<script>
 
    document.getElementById('summary').onclick = function() {
        document.getElementById('summary').style.display = 'none';
        document.getElementById('form').style.display = 'block';
    }
</script>
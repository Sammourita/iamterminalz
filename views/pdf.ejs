<%- include('./common/head2'); -%> <%- include('./common/nav'); -%> <%-
include('./common/push-down'); -%><body>

    <script>
        document.getElementById('back').onclick = function() {
            window.history.go(-1)
        }
    </script>    

<div style="margin-top: -9vh;"></div>
<% shamels.forEach(function(shamel) { %>
    <div class="card">
        <div class="card-body" style="display: flex; justify-content: center; align-items: center;">
            <p style="position: absolute; left: 15%;"><%= shamel.branch %></p>
            <p style="position: absolute; right: 15%;"><%= shamel.material %></p>
          <a href="/shamel/<%= shamel.branch %>/<%= shamel.material %>/<%= shamel.year %>" class="btnz btn btn-primary"><%= shamel.year %></a>
        </div>
      </div>
    <% }) %>

</body>
<style>
    body{
        width: 100%;
    }
    .card {
        transition: .5s all ease;
    }
    .card:hover {
        background-color: rgba(8, 149, 101, 0.8);
        transform: scale(1.1);
        z-index: 1;
        box-shadow: 0px 0px 40px black;
        color: white;
    }     
    .btnz {
        border: 2px solid #333333;
        background-color: transparent;
        color: #333333;
        width: 35%;
        transform: .2s all ease;
    }
    .btnz:hover {
        outline: none;
        border: 2px solid #333333;
        background-color: #333333;
    }
    @media only screen and (max-width: 800px) {
        .card {
            width: 100%;

        }
        .card:hover {
        background-color: rgba(8, 149, 101, 0.8);
        transform: scale(1.05);
        z-index: 1;
        box-shadow: 0px 0px 40px black;
        color: white;
    }     
    }
</style>

